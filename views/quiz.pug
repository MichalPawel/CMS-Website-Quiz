extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jaka jest twoja ulubiona pora roku?
      ul 
        each item in data 
          li 
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='vote')
      p Aby zobaczyc wyniki oddaj glos
  else 
    h1 Thanks for voting
    p results:
    ul 
      each item in data 
        li #{item.title} - votes: #{item.vote} (#{Math.round(item.vote/sum*100)}%)
    p votes: #{sum}